#!/bin/sh

[ "$(stat -c %y ~/.cache/corona | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] &&
	curl -s https://corona-stats.online/FI > ~/.cache/corona


grep "Finland" ~/.cache/corona |
	sed "s/\s*//g ; s/â•‘//g ; s/â”‚/;/g ; s/â–²/ðŸ”º/g" |
	awk -F';' '{print "ðŸ˜·" $3 " ("$4")" " ðŸ’€" $5 " ("$6")" }'
